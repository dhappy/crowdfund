= form_for @bid do |f|
  - if @bid.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bid.errors.count, "error")} prohibited this bid from being saved:"
      %ul
        - @bid.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :estimated_time
    = f.number_field :time
    hours

  .field
    = f.label :amount
    $
    = f.text_field :amount
  = f.hidden_field :issue_id
  .actions
    = f.submit 'Save'
